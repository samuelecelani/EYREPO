{
  // ============================================
  // Configurazione IDE per Angular + AI Assistance
  // ============================================

  // TypeScript e Angular
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Editor
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,

  // Files
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Prettier
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ESLint
  "eslint.validate": ["javascript", "typescript", "html"],

  // Angular Language Service
  "angular.enable-strict-mode-prompt": false,

  // Suggerimenti AI/IntelliSense
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",

  // File Associations
  "files.associations": {
    "*.html": "html",
    "*.component.html": "html",
    "*.page.html": "html"
  },

  // Exclude da ricerca
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/coverage": true,
    "**/.angular/**": true
  },

  // Nasconde file temporanei dall'Explorer (sidebar)
  "files.exclude": {
    "**/.angular": true,
    "**/dist": true,
    "**/.angular/**": true,
    "**/node_modules": false // false = mostra (default), cambia in true per nascondere
  },

  // File Watcher: non monitora cambiamenti in queste cartelle (migliora performance)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.angular/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },

  // File Nesting (per migliore organizzazione)
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.spec.ts, ${capture}.html, ${capture}.scss, ${capture}.css",
    "*.component.ts": "${capture}.component.html, ${capture}.component.scss, ${capture}.component.css, ${capture}.component.spec.ts",
    "*.page.ts": "${capture}.page.html, ${capture}.page.scss, ${capture}.page.css, ${capture}.page.spec.ts"
  },

  // IntelliCode (AI suggestions)
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Path Intellisense
  "path-intellisense.mappings": {
    "@app": "${workspaceFolder}/src/app",
    "@shared": "${workspaceFolder}/src/app/shared",
    "@features": "${workspaceFolder}/src/app/features"
  },
  "terminal.integrated.fontLigatures.enabled": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono Medium', 'JetBrainsMono Nerd Font', 'JetBrainsMono NF', 'JetBrains Mono', monospace",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "workbench.colorTheme": "Default Dark+"
}
